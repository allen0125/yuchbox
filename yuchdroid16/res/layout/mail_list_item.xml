<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mail_item"
	android:layout_width="fill_parent"
	android:layout_height="70sp"
	android:background="#fff">
	
	<TextView 
		android:id="@+id/mail_date_spliter"
		android:layout_width="fill_parent"
		android:layout_height="20sp"
		android:text="Mail Time"
		android:textColor="#666"
		android:textSize="15sp"
		android:textStyle="bold"
		android:gravity="center"
		android:background="#aaa"/>
		
	<CheckBox 
		android:id="@+id/mail_item_checkbox" 
   	 	android:focusable="false"
   	 	android:layout_below="@id/mail_date_spliter"
   	 	android:layout_height="wrap_content" 
   	 	android:layout_width="wrap_content"
   	 	android:gravity="center"
   	 	android:button="@drawable/mail_item_checkbox_ui"
   	 	android:layout_alignParentRight="true"/>
	
	<ImageView
		android:id="@+id/mail_group_flag"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/mail_list_flag_recv"
		android:layout_marginLeft="2sp"
		android:layout_marginTop="3sp"
		android:layout_below="@id/mail_date_spliter"/>    
    
	<TextView
       	android:id="@+id/mail_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_toRightOf="@id/mail_group_flag"
       	android:layout_below="@id/mail_date_spliter"
       	android:layout_marginTop="3sp"
        android:maxWidth="150sp"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="mail subject "/>
     
    <TextView
       	android:id="@+id/mail_body"
       	android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3sp"
        android:layout_marginTop="3sp"
        android:textColor="#888"
        android:layout_toLeftOf="@id/mail_item_checkbox"
        android:layout_toRightOf="@id/mail_subject"
        android:layout_below="@id/mail_date_spliter"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="mail body "/>
    
   	<TextView  
		android:id="@+id/mail_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxWidth="100sp"
		android:layout_below="@id/mail_body"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginTop="2sp"
		android:paddingRight="5sp"	
		android:textSize="12sp"
		android:textColor="#000"
		android:singleLine="true"
		android:gravity="center|left"
		android:text="mail time mail time" />
		   	 	
   	 <TextView 
   	 	android:id="@+id/mail_from_to" 
   	 	android:text="mail address list mail address list mail address list " 
   	 	android:layout_height="wrap_content" 
   	 	android:maxWidth="190sp" 
   	 	android:singleLine="true" 
   	 	android:textSize="14sp" 
   	 	android:gravity="center|left"
   	 	android:layout_width="wrap_content" 
   	 	android:textColor="#000"
   	 	android:layout_marginLeft="5sp"
   	 	android:layout_alignTop="@+id/mail_time" 
   	 	android:layout_alignLeft="@+id/mail_group_flag" 
   	 	android:layout_alignParentBottom="true"/>
   

</RelativeLayout>
