<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mail_item"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#fff">
   	<CheckBox
		android:id="@+id/mail_check_btn"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:button="@drawable/mail_checkbox"
		android:layout_marginLeft="2dp"
		android:layout_marginTop="5dp"/>
		
	<ImageView
		android:id="@+id/mail_attach_pic"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/mail_item_attach_pic"
		android:layout_alignParentBottom="true"/>    
    
	<TextView
       	android:id="@+id/mail_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_toRightOf="@id/mail_check_btn"
        android:maxWidth="150dp"
        android:textSize="20dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="mail subject mail subject mail subject"/>
     
    <TextView
       	android:id="@+id/mail_body"
       	android:textSize="20dp"
       	android:maxWidth="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:textColor="#888"
        android:layout_toRightOf="@id/mail_subject"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="mail body mail body mail body"/>
           
	<CheckBox
       	android:id="@+id/mail_mark_btn"
       	android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentRight="true"
  		android:button="@drawable/mail_item_marked"
  		android:gravity="right"/>
	
   	<TextView  
		android:id="@+id/mail_from_to"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/mail_attach_pic"
		android:layout_alignParentBottom="true"
		android:maxWidth="200dp"
		android:textSize="16dp"
		android:textColor="#000"
		android:singleLine="true"
		android:text="mail address list mail address list mail address list"/>
		
    <TextView  
		android:id="@+id/mail_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxWidth="100dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"			
		android:textSize="12dp"
		android:textColor="#000"
		android:singleLine="true"
		android:text="mail time mail time"/>

</RelativeLayout>